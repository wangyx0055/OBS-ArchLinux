+void RegExpInputDialog::checkValid(const QString &text){
+QString _text=QString(text);
+int pos=0;
+bool valid=validator->validate(_text, pos)==QRegExpValidator::Acceptable;
+buttonBox->button(QDialogButtonBox::Ok)->setEnabled(valid);
+}
